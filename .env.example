PORT=3000

# ─── App ───
BASE_URL=http://localhost:3000
# For production: BASE_URL=https://yourdomain.vercel.app

# ─── Database (Neon Postgres) ───
DATABASE_URL=postgresql://user:pass@ep-xxxx.region.aws.neon.tech/neondb?sslmode=require

# ─── Auth ───
JWT_SECRET=change-this-to-a-long-random-string

# ─── Google OAuth (console.cloud.google.com) ───
# Authorised redirect URI: BASE_URL + /api/auth/google/callback
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ─── Twilio ───
# Used to provision numbers and send SMS
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
DEMO_TWILIO_NUMBER=   # AU number for the live demo on landing page

# ─── Stripe ───
# Get from dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
# Create a recurring price at dashboard.stripe.com/products → copy the price ID (price_xxx)
STRIPE_PRICE_ID=
# Get from dashboard.stripe.com/webhooks → add endpoint → copy signing secret
STRIPE_WEBHOOK_SECRET=

# ─── OpenAI (for AI flow generation) ───
OPENAI_API_KEY=

# ─── Admin panel ───
ADMIN_PASSWORD=

# ─── Notifications (owner alerts for website enquiries) ───
OWNER_NOTIFY_PHONE=
RESEND_API_KEY=
NOTIFY_EMAIL=hello@coveplatform.com

DEBUG=false
